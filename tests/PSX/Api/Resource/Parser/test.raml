#%RAML 0.8
title: World Music API
baseUri: http://example.api.com/{version}
version: v1
traits:
  - paged:
      queryParameters:
        pages:
          description: The number of pages to return
          type: number
/bar:
  get:
    queryParameters:
      genre:
        description: filter the songs by genre
/foo:
  is: [ paged ]
  description: Some description
  get:
    queryParameters:
      genre:
        description: filter the songs by genre
  post:
    body:
      application/json:
        schema: |
          { "$schema": "http://json-schema.org/draft-04/schema#",
            "type": "object",
            "description": "A canonical song",
            "properties": {
              "title":  { "type": "string" },
              "artist": { "type": "string" }
            },
            "required": [ "title", "artist" ]
          }
    responses:
      200:
        body:
          application/json:
            schema: |
              { "$schema": "http://json-schema.org/draft-04/schema#",
                "type": "object",
                "description": "A canonical song",
                "properties": {
                  "title":  { "type": "string" },
                  "artist": { "type": "string" }
                },
                "required": [ "title", "artist" ]
              }
